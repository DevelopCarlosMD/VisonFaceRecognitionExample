<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_container_horizontal"
    android:layout_marginLeft="@dimen/margin_container_vertical"
    android:layout_marginRight="@dimen/margin_container_vertical"
    android:layout_marginTop="@dimen/margin_container_horizontal"
    android:orientation="vertical"
    android:id="@+id/ll_main_view"
    tools:context="com.coyotestudio.visonfacerecognitionexample.MainActivity">

    <ImageView
        android:id="@+id/imv_faces_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/folder_empty_state" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/btn_load_for_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_load_img_camera"
            tools:ignore="NestedWeights" />

        <Button
            android:visibility="invisible"
            android:id="@+id/btn_load_for_media"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="@string/load_image" />

        <Button
            android:id="@+id/btn_process_face"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/process_face" />

    </LinearLayout>


</LinearLayout>
